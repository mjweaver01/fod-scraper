{
  "name": "fod-scraper",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "tsx watch --inspect server/index.ts",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.prod.json",
    "build": "npm run clean && npm run build:frontend && npm run build:backend",
    "backend:serve": "cross-env NODE_ENV=production tsx dist/server/index.js",
    "prod": "cross-env NODE_ENV=production npm run build && npm run backend:serve",
    "clean": "rm -rf dist",
    "start": "npm run backend:serve"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^144.0.0",
    "openai": "^4.85.1",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3",
    "vue": "^3.5.3",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.4",
    "@vitejs/plugin-vue": "^5.0.5",
    "prettier": "^3.4.2",
    "sass": "^1.82.0",
    "vite": "^6.0.11"
  }
}
