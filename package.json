{
  "name": "fod-scraper",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "tsx watch --inspect server/index.ts",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.prod.json",
    "build": "npm run clean && npm run build:frontend && npm run build:backend",
    "backend:serve": "tsx dist/server/index.js",
    "prod": "cross-env NODE_ENV=production npm run build && cross-env NODE_ENV=production npm run backend:serve",
    "clean": "rm -rf dist",
    "start": "npm run build && npm run backend:serve",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "body-parser": "^1.20.3",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^144.0.0",
    "pinia": "^2.1.7",
    "primeicons": "^7.0.0",
    "puppeteer": "^24.1.0",
    "puppeteer-core": "^24.1.0",
    "sass": "^1.82.0",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3",
    "vue": "^3.5.3",
    "vue-router": "^4.4.0",
    "vite": "^6.0.11"
  }
}
